{
	"geode": "2.0.0-beta.25",
	"version": "v1.6.0",
	"gd": "2.204",
	"id": "qdstudio.basementgdps",
	"name": "BasementGDPS",
	"developer": "QD Studio",
	"description": "BasementGDPS geode port!",
	"early-load": true,

	"settings": {
		"basementResources": {
			"name": "Enable Basement resources",
			"description": "Enable BasementGDPS texturepack",
			"type": "bool",
			"default": true
		},
		"afk-time": {
			"name": "AFK time",
			"description": "The time when AFK mode will turn on (in seconds)",
			"type": "int",
			"control": {
				"input": true,
				"slider": false,
				"arrows": false
			},
			"default": 300,
			"min": 5,
			"max": 360000
		},
		"no-smoke": {
			"description": "Disable smoke particles",
			"name": "No smoke",
			"type": "bool",
			"default": false
		},
		"basement-music": {
			"name": "Enable Basement music",
			"description": "Enable remixes for some songs and change the title music (requires going to main menu)",
			"type": "bool",
			"default": true
		},
		"basement-server": {
			"type": "string",
			"name": "Change the BasementGDPS server",
			"description": "main, test or local",
			"match": "(main)|(test)|(local)",
			"default": "main"
		}
	},

	"resources": {
		"sprites": [
			"resources/sprites/*.png",
			"resources/spritesheets/BasementOverrides.png"
		],
		"files": [
			"resources/dicts/*.plist",
			"resources/soundtracks/*.mp3",
			"resources/spritesheets/BasementOverrides-uhd.plist"
		],
		"spritesheets": {
			"BasementTextures": [
				"resources/spritesheets/BasementTextures/*.png"
			]
		}
	}
}